# SafetyGuard AI - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# GROQ API (for VLM Chat - "The Brain")
# Get your key at: https://console.groq.com
# ===========================================
GROQ_API_KEY=your_groq_api_key_here

# ===========================================
# MongoDB Configuration
# ===========================================
MONGO_URI=mongodb://localhost:27017
DB_NAME=safetyguard_db

# ===========================================
# SingularityNET (Demo Mode by default)
# ===========================================
SNET_MODE=simulated
# SNET_WALLET_ADDRESS=your_wallet_address

# ===========================================
# Model Configuration
# ===========================================
# YOLO confidence threshold
YOLO_CONF_THRESHOLD=0.25
# Falcon-Link low confidence trigger
FALCON_THRESHOLD=0.45

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000
